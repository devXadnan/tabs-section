<div class="shopify-section color-{{ section.settings.color_scheme }}">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="tab">
      {% if section.settings.tab_1_name != blank %}
        <button class="tablinks {% if section.settings.tab_active1 != blank %} active {% endif %}" onclick="openCity(event, 'tab1')">{{ section.settings.tab_1_name }} </button>
      {% endif %}
      {% if section.settings.tab_2_name != blank %}
        <button class="tablinks {% if section.settings.tab_active2 != blank %} active {% endif %}" onclick="openCity(event, 'tab2')">{{ section.settings.tab_2_name }} </button>
      {% endif %}
      {% if section.settings.tab_3_name != blank %}
        <button class="tablinks {% if section.settings.tab_active3 != blank %} active {% endif %}" onclick="openCity(event, 'tab3')">{{ section.settings.tab_3_name }} </button>
      {% endif %}
      {% if section.settings.tab_4_name != blank %}
        <button class="tablinks {% if section.settings.tab_active4 != blank %} active {% endif %}" onclick="openCity(event, 'tab4')">{{ section.settings.tab_4_name }} </button>
      {% endif %}
    </div>
    
    {%- for block in section.blocks -%}
      {%- case block.type -%}
    
        {%- when 'product_info' -%}
        <div id="tab1" class="tabcontent" {% if section.settings.tab_active1 != blank %} style="display: block;" {% endif %}>
          {%- if block.settings.product_description -%}
            {%- if product.description != blank -%}
              <div class="product__description rte quick-add-hidden" {{ block.shopify_attributes }}>
                {{ product.description }}
              </div>
            {%- endif -%} 
          {%- endif -%}
          <p>{{ block.settings.info_content }}</p>
        </div>
        {%- when 'text_with_icon' -%}
        <div id="tab2" class="tabcontent" {% if section.settings.tab_active2 != blank %} style="display: block;" {% endif %}>
          <div class="twi-parent">
            <div class="twi1 twi-content">
              {%- assign icon_1 = block.settings.icon_1 -%}
              {% if icon_1 != blank %}
              {{ icon_1 | image_url: width: 90 | image_tag: class: 'twi1_img', loading: 'lazy' }}
              {% endif %}
             <h4 class="twi1_title twi-info">{{ block.settings.icon_1_title }}</h4>
              <p class="twi1_desc twi-info">{{ block.settings.icon_1_description }} </p>
            </div>
            <div class="twi2 twi-content">
              {%- assign icon_2 = block.settings.icon_2 -%}
              {% if icon_2 != blank %}
              {{ icon_2 | image_url: width: 90 | image_tag: class: 'twi2_img', loading: 'lazy' }}
              {% endif %}
              <h4 class="twi2_title twi-info">{{ block.settings.icon_2_title }}</h4>
              <p class="twi2_desc twi-info">{{ block.settings.icon_2_description }} </p>
            </div>
            <div class="twi3 twi-content">
              {%- assign icon_3 = block.settings.icon_3 -%}
              {% if icon_3 != blank %}
              {{ icon_3 | image_url: width: 90 | image_tag: class: 'twi3_img', loading: 'lazy' }}
              {% endif %}
              <h4 class="twi3_title twi-info">{{ block.settings.icon_3_title }}</h4>
              <p class="twi3_desc twi-info">{{ block.settings.icon_3_description }} </p>
            </div>
            <div class="twi4 twi-content">
              {%- assign icon_4 = block.settings.icon_4 -%}
              {% if icon_4 != blank %}
              {{ icon_4 | image_url: width: 90 | image_tag: class: 'twi4_img', loading: 'lazy' }}
              {% endif %}
              <h4 class="twi4_title twi-info">{{ block.settings.icon_4_title }}</h4>
              <p class="twi4_desc twi-info">{{ block.settings.icon_4_description }} </p>
            </div>
          </div> 
        </div>
        {%- when 'image' -%}
        <div id="tab3" class="tabcontent" {% if section.settings.tab_active3 != blank %} style="display: block;" {% endif %}>
          {%- assign image = block.settings.image -%}
          {{ image | image_url: width: image.width | image_tag: class: 'tab_img', loading: 'lazy' }}
        </div>
        {%- when 'html' -%}
        <div id="tab4" class="tabcontent" {% if section.settings.tab_active4 != blank %} style="display: block;" {% endif %}>
          {{ block.settings.html }}
        </div>
        {%- endcase -%}
    {%- endfor -%}
  </div>
</div>
<style>
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  /* Style the tab */
.tab {
  overflow: hidden;
  border: none;
  background-color: #f5f2e9;
}

/* Style the buttons inside the tab */
.tab button {
  background-color: inherit;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
  font-size: 18px;
  font-weight: 600;
  text-transform: uppercase;
}

/* Change background color of buttons on hover */
.tab button:hover {
  background-color: #e0dccf;
}

/* Create an active/current tablink class */
.tab button.active {
  background-color: #e0dccf;
}

/* Style the tab content */
.tabcontent {
  display: none;
  padding: 4.5rem 12px;
  border: none;
  border-top: none;
}
  .twi-parent {
display: grid;
grid-template-columns: repeat(4, 1fr);
grid-template-rows: 1fr;
grid-column-gap: 20px;
grid-row-gap: 0px;
}

.twi1 { grid-area: 1 / 1 / 2 / 2; }
.twi2 { grid-area: 1 / 2 / 2 / 3; }
.twi3 { grid-area: 1 / 3 / 2 / 4; }
.twi4 { grid-area: 1 / 4 / 2 / 5; }
  .twi-content{
    text-align: center; 
  }
  .twi-info{
    text-align: left;
    line-height: 20px;
  }
  @media(max-width:767px){
    .twi-parent {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
      grid-column-gap: 20px;
      grid-row-gap: 20px;
    }
  .twi1 { grid-area: 1 / 1 / 2 / 2; }
  .twi2 { grid-area: 1 / 2 / 2 / 3; }
  .twi3 { grid-area: 2 / 1 / 3 / 2; }
  .twi4 { grid-area: 2 / 2 / 3 / 3; }
  }
</style>
<script>
  function openCity(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>
